<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".ActivityVjezba">

    <Button
        android:id="@+id/watchVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/butVji"
        app:backgroundTint="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/butVjii"
        app:backgroundTint="#F44336"
        app:layout_constraintEnd_toEndOf="@+id/watchVideo"
        app:layout_constraintStart_toStartOf="@+id/watchVideo"
        app:layout_constraintTop_toBottomOf="@+id/watchVideo" />
</androidx.constraintlayout.widget.ConstraintLayout>